# Application Configuration
APP_NAME=Rational Onion
APP_ENV=development
DEBUG=false
LOG_LEVEL=debug

# API Configuration
API_HOST=localhost
API_PORT=8000
API_VERSION=v1
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
VALID_API_KEYS=["test_api_key_123"]

# Security
SECRET_KEY=generate_a_secure_secret_key
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=20
NEO4J_ENCRYPTION_ENABLED=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_MEMORY=1gb
CACHE_MAX_MEMORY_POLICY=allkeys-lru

# NLP Services
SPACY_MODEL=en_core_web_md
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
NLP_BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512
EMBEDDING_DIMENSION=384

# External Services
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development

# Monitoring and Telemetry (disabled for local development)
ENABLE_METRICS=false
ENABLE_TRACING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT=100/minute

# Logging
LOG_FORMAT=text
LOG_FILE_PATH=logs/rational_onion.log
ENABLE_ACCESS_LOG=true
ENABLE_ERROR_LOG=true
