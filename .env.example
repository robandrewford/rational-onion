# Application Configuration
APP_NAME=Rational Onion
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=debug     # debug, info, warning, error, critical

# API Configuration
API_HOST=localhost
API_PORT=8000
API_VERSION=v1
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
API_KEYS=your_api_key_1,your_api_key_2  # Comma-separated list of valid API keys

# Security
SECRET_KEY=your_secret_key_here  # Used for JWT tokens and other security features
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password
NEO4J_DATABASE=neo4j  # Default database name
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=20  # seconds
NEO4J_ENCRYPTION_ENABLED=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_password
REDIS_DB=0
REDIS_SSL=false
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
CACHE_MAX_MEMORY=1gb
CACHE_MAX_MEMORY_POLICY=allkeys-lru

# NLP Services
SPACY_MODEL=en_core_web_md
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
NLP_BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512
EMBEDDING_DIMENSION=384

# External Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # or gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

SCHOLARLY_API_KEY=your_scholarly_api_key_here
SCHOLARLY_MAX_RESULTS=50
SCHOLARLY_TIMEOUT=30  # seconds

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000  # WebSocket URL
REACT_APP_ENVIRONMENT=development
REACT_APP_SENTRY_DSN=your_sentry_dsn  # Error tracking

# Monitoring and Telemetry
ENABLE_METRICS=true
PROMETHEUS_METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # requests per window
RATE_LIMIT_WINDOW=60  # seconds

# Logging
LOG_FORMAT=json  # json or text
LOG_FILE_PATH=logs/rational_onion.log
ENABLE_ACCESS_LOG=true
ENABLE_ERROR_LOG=true
